<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/textview_padding_small"
    android:layout_marginLeft="@dimen/textview_padding_small"
    android:layout_marginRight="@dimen/textview_padding_small"
    android:layout_marginTop="@dimen/textview_padding_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/photo_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/bar_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-bold"
                android:maxLines="@integer/article_title_maxlines"
                android:paddingBottom="@dimen/textview_padding_small"
                android:paddingLeft="@dimen/textview_padding_big"
                android:paddingRight="@dimen/textview_padding_big"
                android:paddingTop="@dimen/textview_padding_big"
                android:textColor="@color/white"
                android:textSize="@dimen/article_title_textsize"/>

            <TextView
                android:id="@+id/article_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="@integer/article_subtitle_maxlines"
                android:paddingBottom="@dimen/textview_padding_big"
                android:paddingLeft="@dimen/textview_padding_big"
                android:paddingRight="@dimen/textview_padding_big"
                android:textColor="@color/white"
                android:textSize="@dimen/article_subtitle_textsize"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
