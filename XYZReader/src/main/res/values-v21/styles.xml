        <item name="android:windowTransitionBackgroundFadeDuration">@integer/anim_fade_duration</item>

        <!-- ....... content transition ....... -->
        <!-- 'EXIT', ENTER transitions -->
        <!--<item name="android:windowExitTransition">@transition/</item>-->
        <!--<item name="android:windowEnterTransition">@transition/</item>-->

        <!-- ....... specify shared element transition ....... -->
